<odoo>
    <!-- إنشاء كاتيجوري Portal لو مش موجودة -->
    <record id="module_category_portal" model="ir.module.category">
        <field name="name">Portal</field>
        <field name="sequence">15</field>
    </record>

    <!-- إنشاء جروب جديد ليوزر البورتال -->
    <record id="group_portal_order_creator" model="res.groups">
        <field name="name">Portal: Order Creator</field>
        <field name="category_id" ref="library.module_category_portal"/>
        <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
    </record>


    <!-- صلاحية قراءة وإنشاء على sale.order -->
    <record id="access_portal_order_creator_sale_order" model="ir.model.access">
        <field name="name">access.portal.order.creator.sale.order</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="group_id" ref="library.group_portal_order_creator"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="rule_portal_order_creator_own_orders" model="ir.rule">
        <field name="name">Portal: User can read/create his own orders</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="groups" eval="[(4, ref('library.group_portal_order_creator'))]"/>
        <field name="domain_force">[('partner_id','=',user.partner_id.id)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>



</odoo>
