<odoo>
    <record id="view_users_form_inherit_portal_permissions" model="ir.ui.view">
        <field name="name">res.users.form.inherit.portal.permissions</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">

            <!-- إدراج الحقل داخل تبويب Access Rights -->
            <xpath expr="//page[@name='access_rights']" position="inside">
                <group string="Portal Permissions" invisible="share == False">
                    <field name="portal_extra_groups" widget="many2many_tags"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>