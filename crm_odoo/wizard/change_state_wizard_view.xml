<odoo>
    <record id="task_change_state_wizard_view_form" model="ir.ui.view">
        <field name="name">change state wizard form</field>
        <field name="model">wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="task_id" readonly="1"/>
                    <field name="status" required="1"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="change_wizard_window_action" model="ir.actions.act_window">
        <field name="name">Wizard</field>
        <field name="res_model">wizard</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
</odoo>