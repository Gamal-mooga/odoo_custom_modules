<odoo>
    <record id="task_view_tree" model="ir.ui.view">
        <field name="name">task tree</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <tree decoration-danger="(is_late)">
                <field name="task_name"/>
                <field name="assign_to"/>
                <field name="description"/>
                <field name="due_date"/>
                <field name="is_late" invisible="1"/>
                <field name="estimated_time"/>
                <field name="total_time"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="task_view_form" model="ir.ui.view">
        <field name="name">task form</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                   <div class="oe_title">
                        <label for="sequence"/>
                        <h1>
                            <field name="sequence"/>
                        </h1>
                        <label for="task_name"/>
                        <h3>
                            <field name="task_name" modifiers="{'readonly': [('status', 'in', ['closed','completed'])]}"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="assign_to"  modifiers="{'readonly': [('status', 'in', ['closed','completed'])]}"/>
                            <field name="due_date"  modifiers="{'readonly': [('status', 'in', ['closed','completed'])]}"/>
                            <field name="estimated_time" modifiers="{'readonly': [('status', 'in', ['closed','completed'])]}"/>
                            <field name="total_time" modifiers="{'readonly': [('status', 'in', ['closed','completed'])]}"/>
                        </group>
                        <group>
                            <field name="status"  modifiers="{'readonly': [('status', 'in', ['closed','completed'])]}"/>
                            <field name="description" modifiers="{'readonly': [('status', 'in', ['closed','completed'])]}"/>
                            <field name="active" modifiers="{'readonly': [('status', 'in', ['closed','completed'])]}"/>
                            <field name="is_late" invisible="1" modifiers="{'readonly': [('status', 'in', ['closed','completed'])]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Timesheets">
                            <field name="timesheet_ids" modifiers="{'readonly': [('status', 'in', ['closed','completed'])]}">
                                <tree>
                                    <field name="date"/>
                                    <field name="description"/>
                                    <field name="time_spent"/>
                                </tree>
                                <form>
                                   <group>
                                        <field name="date"/>
                                        <field name="description"/>
                                        <field name="time_spent"/>
                                   </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
            </form>
        </field>
    </record>
     <record id="task_view_search" model="ir.ui.view">
        <field name="name">task search</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_name"/>
                <field name="assign_to"/>

                <filter name="is_new" string="New Status" domain="[('status','=','new')]"/>
                <filter name="is_in_progress" string="In Progress Status" domain="[('status','=','in_progress')]"/>
                <filter name="completed" string="Completed Status" domain="[('status','=','completed')]"/>

                <filter name="group_assign_to" string="Assign To" context="{'group_by':'assign_to'}"/>
                <filter name="group_status" string="Status" context="{'group_by':'status'}"/>
                <filter name="group_due_date" string="Due Date" context="{'group_by':'due_date'}"/>
            </search>
        </field>
    </record>
    <record id="task_action" model="ir.actions.act_window">
        <field name="name">task_action</field>
        <field name="res_model">task</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="task_close_server_action" model="ir.actions.server">
        <field name="name">Close</field>
        <field name="model_id" ref="model_task"/>
        <field name="binding_model_id" ref="model_task"/>
        <field name="state">code</field>
        <field name="code">
            action=records.action_close()
        </field>
    </record>

    <record id="checking_late" model="ir.cron">
        <field name="name">Check Task Late</field>
        <field name="model_id" ref="model_task"/>
        <field name="state">code</field>
        <field name="code">model.check_late()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">true</field>
    </record>

    <record id="change_state_server_action" model="ir.actions.server">
        <field name="name">Wizard</field>
        <field name="model_id" ref="model_task"/>
        <field name="binding_model_id" ref="model_task"/>
        <field name="state">code</field>
        <field name="code">
            action=records.action_open_wizard_window()
        </field>
    </record>

    <menuitem
            id="tasks_menu_item"
            name="All Tasks"
            parent="to_do_menu"
            action="task_action"
    />
</odoo>
