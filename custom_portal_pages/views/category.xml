<odoo>
    <data noupdate="0">

        <!-- Menus -->
        <menuitem id="menu_app_one_root"
                  name="App One"
                  sequence="10"/>

        <menuitem id="menu_app_one_sub"
                  name="Sub Menu"
                  parent="menu_app_one_root"
                  action="action_app_one_model"/>

        <!-- Actions -->
        <record id="action_app_one_model" model="ir.actions.act_window">
            <field name="name">App One Records</field>
            <field name="res_model">app.one.model</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>


